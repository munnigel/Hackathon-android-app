        android:supportsRtl="true"
        android:theme="@style/Theme.Nftscmers">

        <activity
            android:name=".commonactivities.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".commonactivities.FeedbackActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".commonactivities.SignUpActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".commonactivities.ViewJobActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".commonactivities.ForgetPasswordActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".applicantactivities.ScrollJobActivity"
            android:exported="true" >
        </activity>

        <activity
            android:name=".applicantactivities.ApplicationHistoryActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".applicantactivities.SearchActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".applicantactivities.ProfileActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".applicantactivities.EditProfileActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".employeractivities.ScrollApplicationActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".employeractivities.ProfileActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".employeractivities.EditProfileActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".employeractivities.EditJobActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".employeractivities.JobHistoryActivity"
            android:exported="true">
